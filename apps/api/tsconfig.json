{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@repo/typescript-config/node.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*"]
    },
    "incremental": true
  },
  "include": ["**/*.ts"]
}

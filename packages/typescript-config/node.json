{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "nodenext",
    "sourceMap": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": false,
    "target": "es2023",

    "esModuleInterop": true,
    "moduleResolution": "nodenext"
  }
}
